<div class="mt-30">
    <div class="col-md-12">
        <div class="col-md-10">
            <table class="table table-bordered">
                <thead class="thead-inverse">
                    <tr>
                        <th>No.</th>
                        <th>Name</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Slug</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total Price</th>
                        <th>Action</th>
                    </tr>
                    </thead>
                    <tbody>
                        {{#each cartValue}}
                        <tr>
                            <td scope="row">{{Sum @index 1}}</td>
                            <td>{{this.name}}</td>
                            <td>{{this.description}}</td>
                            <td><img src="/uploads/{{this.image}}" alt="" width="50px" height="50px" /></td>
                            <td>{{this.slug}}</td>
                            <td>{{this.price}}$</td>
                            
                            <td>
                                <form action="/carts/updateQ/{{this.slug}}" method="POST" class="form-update-quantity">
                                      <p>
                                        <img src="http://i.imgur.com/yOadS1c.png" id="minus1" width="20" height="20" class="minus float-right"/>
                                        <img id="add1" src="http://i.imgur.com/98cvZnj.png" width="20" height="20" class="add"/>
                                        <input id="qty1" type="text" value="{{this.quantity}}" name="quantity" class="qty"/>
                                        <input type="submit" value="Update" class="float-right">
                                      </p>
                                </form>
                            </td>
                            <td>{{ Multi this.price this.quantity}}$</td>
                            <td>
                                <a href="/carts/cartDelete/{{this._id}}" class="btn btn-danger">Return</a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
            </table>
             <a href="#" class="btn btn-primary" id="served">Served</a>
             <span id="afterserved" class="btn btn-primary"></span>
        </div>
    </div>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script>
         $(document).ready(function() {
             var a =0;
             $('#afterserved').css('display', 'none');
        $('#served').on('click', function(e) {
            var b= a++;
            
            if(b =! 0){
                return confirm ('are you sure ?')
                $(this).css('display','none')
                $('#afterserved').html('thanks for coming here')
                $('#afterserved').css('display', 'block'); 
            }
        })
       
      })
    </script>
</div>