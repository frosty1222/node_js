<div class="row">
    <div class="col-md-12">
        <div class="col-md-10">
            <legend>View Dish</legend>
            <table id="dtBasicExample" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th class="th-sm">No.</th>
                        <th class="th-sm">Name
                            <span class="oi oi-elevator"></span>
                            <a href="?sort=asc">
                                <span class="oi oi-sort-descending"></span>
                            </a>
                            <a href="?sort=desc">
                                <span class="oi oi-sort-ascending"></span>
                            </a>
                        </th>
                        <th class="th-sm">Description</th>
                        <th class="th-sm">Slug</th>
                        <th class="th-sm">Price
                        </th>
                        <th class="th-sm">Sale_price</th>
                        <th class="th-sm">Image</th>
                        <th class="th-sm">Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each course}}
                    <tr>
                        <td scope="row">{{Sum @index 1}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.description}}</td>
                        <td>{{this.slug}}</td>
                        <td>{{this.price}}</td>
                        <td>{{this.sale_price}}</td>
                        <td><img src="/uploads/{{this.image}}" alt="{{this.slug}}" width="70px" height="50px"></td>
                        <td>
                            <a href="/courses/edit/{{this.slug}}" class="btn btn-primary">Edit</a>
                            <a href="/courses/delete/{{this._id}}" onclick="return confirm('Are you sure ?')" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
            <nav aria-label="...">
            <ul class="pagination">
                <li class="page-item">
                <a class="page-link" href="/courses/tablelist?page={{PrePage page}}">Previous</a>
                </li>
                <li class="page-item">
                <a class="page-link" href="/courses/tablelist?page={{nextPage page}}">Next</a>
                </li>
            </ul>
            </nav>
        </div>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
        <script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>
        <script>
        $(document).ready(function () {
        $('#dtBasicExample').DataTable();
        $('.dataTables_length').addClass('bs-select');
        });
        </script>
    </div>
</div>