<div class="mt-4">
    <div class="col-md-12">
        <div class="col-md-8 center-content">
            <legend class="text-center">Edit Form</legend>
            {{#each course}}
            <form action="/courses/update/{{this._id}}" method="post">
                 <div class="form-group">
                <label for="">Name</label>
                <input type="text" name="name"  class="form-control" value="{{this.name}}">
              </div>
              <div class="form-group">
                <label for="">Description</label>
                <input type="text" name="description"  class="form-control" value="{{this.description}}">
              </div>
              <div class="form-group">
                <label for="">Image</label>
                <input type="text" name="image"  class="form-control" value="{{this.image}}" readonly>
              </div>
              <div class="form-group">
                <label for="">Slug</label>
                <input type="text" name="slug"  class="form-control" value="{{this.slug}}" readonly>
              </div>
              <div class="form-group">
              <label for="Price">Price</label>
              <input type="text" class="form-control" name="price" value="{{this.price}}">
            </div>
            <div class="form-group">
              <label for="Sale_price">Sale_price</label>
              <input type="text" class="form-control" name="sale_price" value="{{this.sale_price}}">
            </div>
              <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            {{/each}}
        </div>
    </div>
</div>